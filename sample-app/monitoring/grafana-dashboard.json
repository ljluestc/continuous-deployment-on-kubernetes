{
  "dashboard": {
    "id": null,
    "title": "Kubernetes Continuous Deployment - Application Metrics",
    "description": "Real-time monitoring dashboard for the sample application",
    "tags": ["kubernetes", "continuous-deployment", "go"],
    "timezone": "UTC",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(request_count_total[5m])",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Requests per second",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "xAxis": {
          "mode": "time"
        }
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(error_count_total[5m])",
            "legendFormat": "Errors/sec",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Errors per second",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "xAxis": {
          "mode": "time"
        }
      },
      {
        "id": 3,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "avg_response_time_seconds",
            "legendFormat": "Average Response Time",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "xAxis": {
          "mode": "time"
        }
      },
      {
        "id": 4,
        "title": "Status Codes",
        "type": "piechart",
        "targets": [
          {
            "expr": "status_code_total",
            "legendFormat": "{{code}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Endpoint Distribution",
        "type": "bargauge",
        "targets": [
          {
            "expr": "endpoint_total",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Uptime",
        "type": "stat",
        "targets": [
          {
            "expr": "uptime_seconds",
            "legendFormat": "Uptime",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Total Requests",
        "type": "stat",
        "targets": [
          {
            "expr": "request_count_total",
            "legendFormat": "Total Requests",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Error Rate Percentage",
        "type": "gauge",
        "targets": [
          {
            "expr": "rate(error_count_total[5m]) / rate(request_count_total[5m]) * 100",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 9,
        "title": "Health Status",
        "type": "table",
        "targets": [
          {
            "expr": "up{job=\"sample-app\"}",
            "legendFormat": "Service Status",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 1,
    "links": []
  }
}
